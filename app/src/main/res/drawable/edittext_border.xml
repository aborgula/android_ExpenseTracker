<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Kolor tła (np. biały lub lekko szary) -->
    <solid android:color="#FFFFFF" />

    <!-- Ramka -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- jasnoszara ramka -->

    <!-- Zaokrąglenie rogów -->
    <corners android:radius="12dp" />

    <!-- Margines wewnętrzny -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
